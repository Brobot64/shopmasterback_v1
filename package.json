{
  "name": "shopmaster-back",
  "version": "1.0.0",
  "description": "Backend for ShopMaster",
  "main": "index.ts",
  "repository": "https://github.com/github.com/Brobot64",
  "author": "Brobot (https://bdevdportfolio.netlify.app)",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.4",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "redis": "^5.5.6",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/redis": "^4.0.11",
    "@types/winston": "^2.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "trev": "nodemon src/server.ts",
    "dev": "ts-node-dev --respawn --transpile-only --no-notify --env-file=.env.development src/server.ts",
    "dev:local": "NODE_ENV=development ts-node-dev --respawn --transpile-only --no-notify --env-file=.env.development src/server.ts",
    "dev:prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only --no-notify src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/InitialMigration -d src/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "seed": "ts-node src/database/seed.ts",
    "docker:build": "docker build -t shopmaster-backend .",
    "docker:run": "docker run -p 5000:5000 shopmaster-backend"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
